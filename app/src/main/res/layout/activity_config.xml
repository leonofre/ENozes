<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controlf13.enozes.ConfigActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundconfig"
        android:padding="10dp"
        tools:ignore="MissingConstraints,RtlHardcoded,UselessLeaf"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:contextClickable="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/iconevoltarpreto"
            tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute" />

        <ImageView
            android:id="@+id/logoControlF13"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp"
            app:srcCompat="@drawable/logotime"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="665dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/controlF13text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logoControlF13"
            android:layout_alignTop="@+id/logoControlF13"
            android:text="Desenvolvido por"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnVoltar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/somConfig"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/icone_de_som"
                    app:srcCompat="@drawable/somconfig" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#21100B"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/notSound"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="false"
                        android:layout_toStartOf="@+id/sound"
                        android:background="#21100B"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/xiconeinativo" />

                    <ImageButton
                        android:id="@+id/sound"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentTop="false"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/somiconeativo" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnVoltar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/musicConfig"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_alignEnd="@+id/btnVoltar"
                    android:layout_below="@+id/linearLayout"
                    android:contentDescription="@string/icone_de_musica"
                    app:srcCompat="@drawable/musicaconfig" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#21100B"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/notMusic"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#21100B"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/xiconeinativo" />

                    <ImageButton
                        android:id="@+id/music"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/somiconeativo" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
